{
    "name": "Sharer-Extension",
    "description": "An Extension for sharing everything of WEB",
    "manifest_version": 2,
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://www.google.com/*"],
            "js": ["index.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Sharer"
    }
}